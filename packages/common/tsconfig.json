{
    "compilerOptions": {
        "target": "es2020",
        "module": "nodenext",                  
        "moduleResolution": "nodenext",         
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",                  // Output directory for compiled files
        "declaration": true,
    },
    "include": ["src"],                    // Adjust as needed
    "exclude": ["node_modules", "dist"]
}
